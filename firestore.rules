rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function للتحقق من صلاحية Admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function للتحقق من أن المستخدم هو صاحب الطلب
    function isOrderOwner(orderId) {
      return request.auth != null && 
             resource.data.userId == request.auth.uid;
    }
    
    // Collection: users
    match /users/{userId} {
      // القراءة: المستخدمون يمكنهم قراءة بياناتهم فقط
      // المدير يمكنه قراءة الكل
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
      
      // الكتابة: المستخدمون يمكنهم كتابة بياناتهم فقط
      // المدير يمكنه كتابة الكل
      allow write: if request.auth != null && 
                      (request.auth.uid == userId || isAdmin());
    }
    
    // Collection: products
    match /products/{productId} {
      // القراءة: الجميع يمكنهم قراءة المنتجات (للعميل والمطعم)
      allow read: if true;
      
      // الكتابة: المدير فقط يمكنه إضافة/تعديل/حذف المنتجات
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Collection: orders
    match /orders/{orderId} {
      // القراءة: 
      // - الزبون يمكنه قراءة طلباته فقط (resource.data.userId == request.auth.uid)
      // - المدير يمكنه قراءة جميع الطلبات (isAdmin())
      // ملاحظة: للـ Query (جلب جميع الطلبات في Admin Dashboard)، يحتاج isAdmin()
      allow read: if request.auth != null && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // الكتابة:
      // - الزبون يمكنه إنشاء طلب جديد
      // - المدير يمكنه تحديث حالة الطلبات
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      
      allow update: if request.auth != null && 
                       (resource.data.userId == request.auth.uid || isAdmin());
      
      // الحذف: المدير فقط
      allow delete: if isAdmin();
    }
  }
}
