rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // صور ملفات المستخدمين - المستخدم يمكنه القراءة والكتابة على مجلده فقط
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // بقية المسارات - يمكن تخصيصها لاحقاً
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
